<xsd:schema xmlns:mimVis="http://lmp.nci.nih.gov/mim/mimVisLevel1" xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" targetNamespace="http://lmp.nci.nih.gov/mim/mimVisLevel1">
	<xsd:annotation>
		<xsd:documentation>
			The MIM Visual (MIM-Vis) XML schema. The schema represents 
			components of MIM diagrams and provides additional components to 
			support metadata related to MIM diagrams. This schema is based on the GPML 2008/2010 XSD schemas with modifications 
			primarily for validation purposes. 
		</xsd:documentation>
    </xsd:annotation>

	<!-- XML ELEMENT DEFINITIONS -->
    <!--MIM Diagram-->
    <xsd:element name="Diagram" type="mimVis:DiagramType">
		<xsd:annotation>
			<xsd:documentation>Main element for documents using this schema</xsd:documentation>
    	</xsd:annotation>	
    	<!-- KEYS -->	
		<xsd:key name="VisKey">
			<xsd:selector xpath="./mimVis:EntityGlyph|./mimVis:InteractionGlyph|./mimVis:Group|./mimVis:Anchor|./mimVis:MimBio/mimVis:PublicationXRef|./mimVis:MimBio/mimVis:RelationshipXRef|./mimVis:MimBio/mimVis:EntityControlledVocabulary"/>
			<xsd:field xpath="@visId"/>
		</xsd:key>
		<xsd:key name="EntityGlyphVisKey">
			<xsd:selector xpath="./mimVis:EntityGlyph"/>
			<xsd:field xpath="@visId"/>
		</xsd:key>
		<xsd:key name="InteractionGlyphVisKey">
			<xsd:selector xpath="./mimVis:InteractionGlyph"/>
			<xsd:field xpath="@visId"/>
		</xsd:key>
		<!-- NOTE: Not just groups, but also ImplicitComplexes -->
		<xsd:key name="GroupVisKey">
			<xsd:selector xpath="./mimVis:Group|./mimVis:EntityGlyph"/>
			<xsd:field xpath="@visId"/>
		</xsd:key>
		<xsd:key name="AnchorVisKey">
			<xsd:selector xpath="./mimVis:Anchor"/>
			<xsd:field xpath="@visId"/>
		</xsd:key>
		<xsd:key name="MimBioVisKey">
			<xsd:selector xpath="./mimVis:MimBio/mimVis:PublicationXRef|./mimVis:MimBio/mimVis:RelationshipXRef|./mimVis:MimBio/mimVis:EntityControlledVocabulary"/>
			<xsd:field xpath="@visId"/>
		</xsd:key>		
		<!-- KEYREFS -->
		<xsd:keyref name="VisRefKeyRef" refer="mimVis:VisKey">
			<xsd:selector xpath="./mimVis:InteractionGlyph/mimVis:Point"/>
			<xsd:field xpath="@visRef"/>
		</xsd:keyref>
		<xsd:keyref name="GroupRefKeyRef" refer="mimVis:GroupVisKey">
			<xsd:selector xpath="./mimVis:EntityGlyph|./mimVis:InteractionGlyph"/>
			<xsd:field xpath="@groupRef"/>
		</xsd:keyref>
		<xsd:keyref name="AnchorRefKeyRef" refer="mimVis:AnchorVisKey">
			<xsd:selector xpath="./mimVis:InteractionGlyph"/>
			<xsd:field xpath="@anchorRef"/>
		</xsd:keyref>		
		<xsd:keyref name="MimBioRefKeyRef" refer="mimVis:MimBioVisKey">
			<xsd:selector xpath="./mimVis:EntityGlyph|./mimVis:InteractionGlyph|./mimVis:Anchor|./mimVis:Group"/>
			<xsd:field xpath="@mimBioRef"/>
		</xsd:keyref>		
    </xsd:element>

	<!-- XML SIMPLE TYPES --> 	
	<!-- Start: DimensionType -->
	<xsd:simpleType name="DimensionType">
        <xsd:annotation>
            <xsd:documentation>
            	Use DimensionType for mimVis:width and mimVis:height. 
            	Values cannot be negative
            </xsd:documentation>
        </xsd:annotation>	
		<xsd:restriction base="xsd:double">
			<xsd:minInclusive value="0"/>
		</xsd:restriction>
	</xsd:simpleType>
	<!-- End: DimensionType -->
	
	<!-- Start: DisplayNameType -->
	<xsd:simpleType name="DisplayNameType">
		<xsd:restriction base="xsd:string">
			<xsd:maxLength fixed="true" value="25"/>
		</xsd:restriction>
	</xsd:simpleType>
	<!-- End: DisplayNameType -->

	<!-- Start: ColorType -->
	<xsd:simpleType name="ColorType">
        <xsd:annotation>
            <xsd:documentation>
				Colors should be retained as hex values (e.g. web color values)
			</xsd:documentation>
        </xsd:annotation>	
		<xsd:restriction base="xsd:string">
			<xsd:pattern value="#?[a-fA-F0-9]{6}"/>
		</xsd:restriction>
	</xsd:simpleType>
	<!-- End: ColorType -->
	
	<!--  Start: ArrowHeadEnumType -->
	<xsd:simpleType name="ArrowHeadEnumType">
		<xsd:annotation>
            <xsd:documentation>
				"Line" represents not having an arrowhead at the end of a line. 
            </xsd:documentation>
        </xsd:annotation>	
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="CovalentModification"/>
			<xsd:enumeration value="NonCovalentReversibleBinding"/>
			<xsd:enumeration value="CovalentIrreversibleBinding"/>
			<xsd:enumeration value="Catalysis"/>
			<xsd:enumeration value="Stimulation"/>
			<xsd:enumeration value="NecessaryStimulation"/>			
			<xsd:enumeration value="ProductionWithoutLoss"/>
			<xsd:enumeration value="StochiometricConversion"/>
			<xsd:enumeration value="TemplateReaction"/>			
			<xsd:enumeration value="CovalentBondCleavage"/>
			<xsd:enumeration value="Inhibition"/>
			<xsd:enumeration value="AbsoluteInhibition"/>			
			<xsd:enumeration value="StateCombination"/>
			<xsd:enumeration value="NextFeature"/>
			<xsd:enumeration value="FirstFeature"/>
			<xsd:enumeration value="BranchingLeft"/>
			<xsd:enumeration value="BranchingRight"/>
			<xsd:enumeration value="Gap"/>
			<xsd:enumeration value="Line"/>
		</xsd:restriction>
	</xsd:simpleType>
	<!--  End: ArrowHeadEnumType -->

	<!--  Start: GroupEnumType -->
	<xsd:simpleType name="GroupEnumType">
	    <xsd:annotation>
            <xsd:documentation>
				Possible group types 
				EntityWithFeatures may be removed in the future
				Generic is provided for "other" grouping needs by developers 
				Entities may only participate in one group
			</xsd:documentation>
        </xsd:annotation>
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="EntityWithFeatures"/>
			<xsd:enumeration value="Generic"/>			
		</xsd:restriction>
	</xsd:simpleType>
	<!--  End: GroupEnumType -->

	<!-- XML GROUPS -->
	<!--  Start: CommentGroup -->
	<xsd:group name="CommentGroup">
        <xsd:annotation>
            <xsd:documentation>
				Comments should not be used for MIM annotations. 
				CommentGroup should be used for all content not included by this schema. 
				GenericProperty allows non-MIM content key-value pairings for this schema
            </xsd:documentation>
        </xsd:annotation>	
		<xsd:sequence>
			<xsd:element maxOccurs="unbounded" minOccurs="0" name="Comment" type="xsd:string"/>
			<xsd:element maxOccurs="unbounded" minOccurs="0" name="GenericProperty">
				<xsd:complexType>
					<xsd:attribute name="key" type="xsd:string" use="required"/>
					<xsd:attribute name="value" type="xsd:string" use="required"/>
				</xsd:complexType>
			</xsd:element>
		</xsd:sequence>
	</xsd:group>
	<!--  End: CommentGroup -->
		
	<!-- XML COMPLEX TYPES -->	
	<!--  Start: DiagramType -->
	<xsd:complexType name="DiagramType">
        <xsd:annotation>
            <xsd:documentation>
				Main document element type for an XML dataset using this schema 
			</xsd:documentation>
        </xsd:annotation>
        <xsd:sequence>
			<xsd:group ref="mimVis:CommentGroup"/>	
			<xsd:element name="mimBioRef" type="xsd:string" maxOccurs="unbounded" minOccurs="0" /> 
          	<xsd:element name="EntityGlyph" type="mimVis:EntityGlyphType" maxOccurs="unbounded" minOccurs="0"/>        					
          	<xsd:element name="InteractionGlyph" type="mimVis:InteractionGlyphType" maxOccurs="unbounded" minOccurs="0"/>        				
          	<xsd:element name="Group" type="mimVis:GroupType" maxOccurs="unbounded" minOccurs="0"/>
          	<xsd:element name="Anchor" type="mimVis:AnchorGlyphType" maxOccurs="unbounded" minOccurs="0" />          	
          	<xsd:element name="MimBio" type="mimVis:MimBioType" maxOccurs="1" minOccurs="0" />  
        </xsd:sequence>
        <xsd:attribute name="width" type="mimVis:DimensionType" use="required"/>
		<xsd:attribute name="height" type="mimVis:DimensionType" use="required"/>
    </xsd:complexType>
    <!--  End: DiagramType -->

	<!-- Start: EntityGlyphType -->
	<xsd:complexType name="EntityGlyphType">
		<xsd:annotation>
            <xsd:documentation>
            	All entity glyphs are based on this element type.  
            </xsd:documentation>
        </xsd:annotation>	
		<xsd:sequence>
			<xsd:group ref="mimVis:CommentGroup"/>	
			<xsd:element maxOccurs="unbounded" minOccurs="0" name="mimBioRef" type="xsd:string"/>
		</xsd:sequence>
		<xsd:attribute name="type" use="required">
			<xsd:annotation>
           		<xsd:documentation>?</xsd:documentation>
       		</xsd:annotation>
			<xsd:simpleType>
				<xsd:restriction base="xsd:string">
					<xsd:enumeration value="SimplePhysicalEntity"/>
					<xsd:enumeration value="EntityFeature"/>
					<xsd:enumeration value="Modifier"/>
					<xsd:enumeration value="ConceptualEntity"/>
					<xsd:enumeration value="SourceSink"/>
					<xsd:enumeration value="RestrictedCopy"/>
					<xsd:enumeration value="ExplicitComplex"/>
					<xsd:enumeration value="ImplicitComplex"/>
				</xsd:restriction>
			</xsd:simpleType>
		</xsd:attribute>
		<xsd:attribute name="visId" type="xsd:string" use="required"/>
		<xsd:attribute name="color" type="mimVis:ColorType" default="000000"/>
        
        <xsd:attribute name="width" type="mimVis:DimensionType" use="optional"/>
		<xsd:attribute name="height" type="mimVis:DimensionType" use="optional"/>
		<xsd:attribute name="position" type="xsd:double" use="optional"/>
		
		<xsd:attribute name="displayName" type="mimVis:DisplayNameType" use="optional"/>
		<xsd:attribute name="groupRef" type="xsd:string" use="optional"/>
		
		<xsd:attribute name="centerX" type="xsd:double" use="optional"/>
		<xsd:attribute name="centerY" type="xsd:double" use="optional"/>

		<xsd:attribute name="startLocationLabel" type="xsd:int" use="optional"/>
		<xsd:attribute name="endLocationLabel" type="xsd:int" use="optional"/>
		<xsd:attribute name="locationLabel" type="xsd:int" use="optional"/>
	</xsd:complexType>
	<!--  End: EntityGlyphType -->      
	
	<!--  End: InteractionGlyphType --> 
	<xsd:complexType name="InteractionGlyphType">
		<xsd:annotation>
            <xsd:documentation>
            	Line glyphs capable of having multiple changes in direction and 
            	two arrowheads.
            </xsd:documentation>
        </xsd:annotation>
		<xsd:sequence>
			<xsd:group ref="mimVis:CommentGroup"/>
			<xsd:element name="Point" maxOccurs="unbounded" minOccurs="2">
				<xsd:complexType>
					<xsd:attribute name="x" type="xsd:double" use="required"/>
					<xsd:attribute name="y" type="xsd:double" use="required"/>
					<xsd:attribute name="relX" type="xsd:double" use="optional"/>
					<xsd:attribute name="relY" type="xsd:double" use="optional"/>
					<xsd:attribute name="arrowHead" type="mimVis:ArrowHeadEnumType" default="Line"/>
					<xsd:attribute name="visRef" type="xsd:string" use="optional"/>
				</xsd:complexType>
			</xsd:element>
			<xsd:element name="anchorRef" type="xsd:string" maxOccurs="unbounded" minOccurs="0"/>
			<xsd:element name="mimBioRef" type="xsd:string" maxOccurs="unbounded" minOccurs="0" />
		</xsd:sequence>
		<xsd:attribute name="visId" type="xsd:string" use="required"/>		
		<xsd:attribute name="color" type="mimVis:ColorType" default="000000"/>
		<xsd:attribute name="groupRef" type="xsd:string" use="optional"/>
	</xsd:complexType>
	<!--  End: InteractionGlyphType --> 
	
	<!-- Start: Anchor Glyphs -->     
	<xsd:complexType name="AnchorGlyphType">
		<xsd:annotation>
            <xsd:documentation>
				Sizing and exact drawing implementation information should be 
				described in-software for MIM-specific anchors according to 
				the MIM graphical notation specification. 
			</xsd:documentation>
        </xsd:annotation>
 		<xsd:sequence>
			<xsd:element name="mimBioRef" type="xsd:string" maxOccurs="unbounded" minOccurs="0"/>
		</xsd:sequence>
 
		<xsd:attribute name="visId" type="xsd:string" use="required"/> 
		<xsd:attribute name="position" type="xsd:double" use="required"/>
		
		<!-- Only two anchor types are MIM-specific "intrans" and "circle" -->  			
		<xsd:attribute name="type" use="required">
			<xsd:annotation>
           		<xsd:documentation>
					Only two anchor types are MIM-specific "InTrans" and "Outcome"
					Annotation anchor allows for the placement of a interaction 
					annotation label. 
					Invisible is being used Pathvisio as part of the user interaction.
				</xsd:documentation>
       		</xsd:annotation>
			<xsd:simpleType>
				<xsd:restriction base="xsd:string">
					<xsd:enumeration value="InTrans"/>
					<xsd:enumeration value="Annotation"/>
					<xsd:enumeration value="Invisible"/>
				</xsd:restriction>
			</xsd:simpleType>
		</xsd:attribute>
		
		<!-- POSTPONED: A label attribute is necessary for customized Annotation labels -->
		<!-- <xsd:attribute name="annotationLabel" type="xsd:string" use="optional" /> --> 
	</xsd:complexType>
	<!-- Start: Anchor Glyphs -->     

	<!-- Start: Group -->
	<xsd:complexType name="GroupType">
	    <xsd:annotation>
            <xsd:documentation>
				A grouping of entities 
			</xsd:documentation>
       	</xsd:annotation>	
		<xsd:sequence>
			<xsd:group ref="mimVis:CommentGroup"/>
			<xsd:element name="mimBioRef" type="xsd:string" maxOccurs="unbounded" minOccurs="0"/>
		</xsd:sequence>
		<xsd:attribute name="visId" type="xsd:string" use="required"/>
		<xsd:attribute name="type" type="mimVis:GroupEnumType" default="Generic"/>
	</xsd:complexType>
	<!-- End: Group -->
	
	<!-- Start: MIM Bio Schema -->
	<xsd:complexType name="MimBioType">
		<xsd:annotation>
            <xsd:documentation>
				Information about cross-references, comments dealing with biology, 
				semantic information about the interactions should be stored in 
				MIM Bio using the IDs as the linking mechanism. 
				Content in this container unlike the Comment or mimVis:GenericProperty
				will be strictly validated. 
				
				The first version will not reference a seperate MIM Bio document. 
			</xsd:documentation>
        </xsd:annotation>
		<xsd:sequence>
			<!--<xsd:any maxOccurs="unbounded" minOccurs="0" namespace="http://lmp.nci.nih.gov/mim/mimBioLevel1"/>-->
			<xsd:element name="title" type="xsd:string" minOccurs="0"/>
        	<xsd:element name="identifier" type="xsd:string" minOccurs="0"/>
	        <xsd:element name="creator" type="xsd:string" minOccurs="0" maxOccurs="unbounded"/>
	        <xsd:element name="contributor" type="xsd:string" minOccurs="0" maxOccurs="unbounded"/>
	        <xsd:element name="description" type="xsd:string" minOccurs="0"/>
	        <xsd:element name="rights" type="xsd:string" minOccurs="0"/>
	        <xsd:element name="source" type="xsd:string" minOccurs="0"/>
	        <xsd:element name="modified" type="xsd:date" minOccurs="0">
	        	<xsd:annotation>
	        		<xsd:documentation>Use date YYYY-MM-DD; 
	        		http://www.w3.org/TR/NOTE-datetime</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
          	<xsd:element name="PublicationXRef" type="mimVis:PublicationXRefType" maxOccurs="unbounded" minOccurs="0" />        
          	<xsd:element name="RelationshipXRef" type="mimVis:RelationshipXRefType" maxOccurs="unbounded" minOccurs="0" />                  	
          	<xsd:element name="EntityControlledVocabulary" type="mimVis:EntityControlledVocabularyType" maxOccurs="unbounded" minOccurs="0" />  			
		</xsd:sequence>
	</xsd:complexType>
	<!-- End: MIM Bio Schema -->

	<!-- Start: Utility -->
    <xsd:complexType name="XRefType">
        <xsd:annotation>
            <xsd:documentation>A generic XRef type.</xsd:documentation>
        </xsd:annotation>
		<xsd:sequence>
			<xsd:element name="db" type="xsd:string" minOccurs="0"/>
			<xsd:element name="dbVersion" type="xsd:string" minOccurs="0"/>
			<xsd:element name="id" type="xsd:string" minOccurs="0"/>
			<xsd:element name="idVersion" type="xsd:string" minOccurs="0"/>
		</xsd:sequence>   
		<xsd:attribute name="visId" type="xsd:string" use="required"/>
    </xsd:complexType>
    <xsd:complexType name="PublicationXRefType">
        <xsd:annotation>
            <xsd:documentation>A XRef type to support publications.</xsd:documentation>
        </xsd:annotation>
        <xsd:complexContent>
            <xsd:extension base="mimVis:XRefType">
				<xsd:sequence>
					<xsd:element name="title" type="xsd:string" minOccurs="0"/>
					<xsd:element name="author" type="xsd:string" minOccurs="0" maxOccurs="unbounded"/>
					<xsd:element name="year" type="xsd:string" minOccurs="0"/>
					<xsd:element name="url" type="xsd:string" minOccurs="0"/>
					<xsd:element name="pages" type="xsd:string" minOccurs="0"/>
					<xsd:element name="journal" type="xsd:string" minOccurs="0"/>
					<xsd:element name="volume" type="xsd:string" minOccurs="0"/>
					<xsd:element name="source" type="xsd:string" minOccurs="0"/>
				</xsd:sequence>
            </xsd:extension>
        </xsd:complexContent>
    </xsd:complexType>
    <xsd:complexType name="RelationshipXRefType">
        <xsd:annotation>
            <xsd:documentation>A XRef type to support linking to external databases.</xsd:documentation>
        </xsd:annotation>  
        <xsd:complexContent>
            <xsd:extension base="mimVis:XRefType">
				<xsd:attribute name="type" use="required">
					<xsd:simpleType>
						<xsd:restriction base="xsd:string">
							<xsd:enumeration value="is"/>
							<xsd:enumeration value="isPartOf"/>
							<xsd:enumeration value="hasPart"/>
							<xsd:enumeration value="isIsomerOf"/>
							<xsd:enumeration value="isHomologTo"/>
							<xsd:enumeration value="encodes"/>
							<xsd:enumeration value="isEncodedBy"/>
							<xsd:enumeration value="hasVersion"/>
							<xsd:enumeration value="isVersionOf"/>
							<xsd:enumeration value="occursIn"/>
							<xsd:enumeration value="isDescribedBy"/>
							<xsd:enumeration value="other"/>
						</xsd:restriction>
					</xsd:simpleType>
				</xsd:attribute>                
            </xsd:extension>
        </xsd:complexContent>
    </xsd:complexType>
	<xsd:complexType name="EntityControlledVocabularyType">
        <xsd:annotation>
            <xsd:documentation>A metadata container to link MIM nodes to BioPAX 3 classes.</xsd:documentation>
        </xsd:annotation>
		<xsd:sequence>
			<xsd:element name="type" minOccurs="0">
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:enumeration value="Complex"/>
						<xsd:enumeration value="RNA"/>
						<xsd:enumeration value="RNARegion"/>
						<xsd:enumeration value="DNA"/>
						<xsd:enumeration value="DNARegion"/>                                
						<xsd:enumeration value="Protein"/>
						<xsd:enumeration value="SmallMolecule"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
		</xsd:sequence>
		<xsd:attribute name="visId" type="xsd:string" use="required"/>
    </xsd:complexType>
	<!-- End: Utility -->
	
</xsd:schema>
